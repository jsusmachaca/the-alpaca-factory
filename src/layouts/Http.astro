---
import { ViewTransitions } from 'astro:transitions';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta 
			name="description" 
			content=`Discover the elegance and warmth of our high-quality garments,
			Made with soft and luxurious alpaca wool. At The Alpaca Factory,
			We offer an exclusive selection of fine clothing, designed to elevate your style and
			Provide you with maximum comfort on every occasion. Explore our collection of
			premium garments and immerse yourself in the exquisite craftsmanship of woven fashion
			with love and care.`
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon"  href="/favicon.ico" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html {
    font-family: "Open Sans", sans-serif;
    scrollbar-color: rgb(194 65 12) black;
    scrollbar-width: 1px;
	}
	
	body {
	  margin: 0;
	}
</style>

<script>
	let prevTitle = document.title;
	window.addEventListener('blur', () => {
		prevTitle = document.title;
		document.title = '¡Por qué te vas! ¡Vuelve! 🙁';
	})
	window.addEventListener('focus', () => {
		document.title = prevTitle;
	})
</script>

