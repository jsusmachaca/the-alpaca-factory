---
interface Props {
  error: string
  code: string
}

const { error, code } = Astro.props
---


<section class="flex justify-center items-center h-screen">
  <div class="container flex flex-col items-center ">
    <div class="flex flex-col gap-6 max-w-md text-center bg-gray-50 rounded-xl shadow-xl p-20">
      <h2 class="font-extrabold text-9xl text-gray-600 dark:text-gray-600">
        <span class="sr-only">{ error }</span>{ code }
      </h2>
      <p class="text-2xl md:text-3xl dark:text-gray-300">
          <slot />
      </p>
      <a href="/" class="px-8 py-4 text-xl font-semibold rounded bg-orange-600 text-gray-50 hover:text-gray-200">Back to home</a>
    </div>
  </div>
</section>